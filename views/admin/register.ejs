<div style="display: grid; justify-content: center;">
    <% if (req.session.error) { %>
        <p><%= req.session.error %></p>
    <% } %>
    
    <a style="text-align: center;" href="/admin/the-login">giriş yapmak için</a>
    <hr>
    <p style="text-align: center;">kayıt</p>
    
    <form style="display: grid; justify-content: center;" action="/admin/the-register" method="POST">
        <div style="display: grid; justify-content: center;">
            <label for="username">kullanıcı adı</label>
            <input type="text" id="username" name="username" required>
        </div>
        <div style="display: grid; justify-content: center;">
            <label for="password">şifre</label>
            <input type="password" id="password" name="password">
        </div>
        <br>
        <button type="submit">kayıt ol</button>
    </form>
</div>